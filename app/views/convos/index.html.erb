<h1>Listing convos</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @convos.each do |convo| %>
      <tr>
        <td><%= convo.user.username %></td>
        <td><%= convo.title %></td>
        <td><%= convo.body %></td>
        <td><%= link_to 'Show', convo %></td>
        <td><%= link_to 'Edit', edit_convo_path(convo) %></td>
        <td><%= link_to 'Destroy', convo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Start a New Convo', new_convo_path %>
